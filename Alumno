public class Alumno { 
private String nombre;  
private double nota1, nota2, nota3; 

Alumno(String nombre, double nota1, double nota2, double nota3) 
{
this.nombre = nombre;
this.nota1 = nota1;
this.nota2 = nota2;
this.nota3 = nota3;
}
String getNombre() 
{
return nombre; 
}

double getNota1() 
{
return nota1; 
}
double getNota2() 
{
return nota2;
}
double getNota3() 
{
return nota3; 
}

void setNombre(String nombre)
{
this.nombre = nombre; 
}
void setNota1(double nota1)
{
this.nota1 = nota1; 
}
void setNota2(double nota2)
{
this.nota2 = nota2;
}
void setNota3(double nota3)
{
this.nota3 = nota3; 
}

double getPromedio()
{
	return ((nota1+nota2+nota3)/3);
}
boolean aprobado()
{
	if(((nota1+nota2+nota3)/3)>59) return true;
	else return false;
}}

